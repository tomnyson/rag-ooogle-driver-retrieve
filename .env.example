# ============================================
# RAG Google Drive - Environment Configuration
# ============================================

# --------------------------------------------
# Google Drive API Authentication
# --------------------------------------------

# OPTION 1: Service Account File (Development - Đơn giản)
# Uncomment dòng này nếu bạn muốn dùng file JSON
GOOGLE_SERVICE_ACCOUNT_FILE=./service-account.json

# OPTION 2: Service Account Environment Variables (Production - An toàn hơn)
# Uncomment các dòng này nếu bạn muốn dùng env vars thay vì file JSON
# Chạy: npm run convert-sa để convert từ JSON sang env vars

# GOOGLE_SERVICE_ACCOUNT_TYPE=service_account
# GOOGLE_SERVICE_ACCOUNT_PROJECT_ID=your-project-id
# GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY_ID=your-private-key-id
# GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
# GOOGLE_SERVICE_ACCOUNT_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# GOOGLE_SERVICE_ACCOUNT_CLIENT_ID=your-client-id
# GOOGLE_SERVICE_ACCOUNT_AUTH_URI=https://accounts.google.com/o/oauth2/auth
# GOOGLE_SERVICE_ACCOUNT_TOKEN_URI=https://oauth2.googleapis.com/token
# GOOGLE_SERVICE_ACCOUNT_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
# GOOGLE_SERVICE_ACCOUNT_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40project.iam.gserviceaccount.com

# --------------------------------------------
# Gemini API
# --------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# --------------------------------------------
# Cron Configuration
# --------------------------------------------
# Cron schedule (default: 2 AM daily)
# Format: minute hour day month weekday
# Examples:
#   0 2 * * *     = Every day at 2 AM
#   */30 * * * *  = Every 30 minutes
#   0 */6 * * *   = Every 6 hours
CRON_SCHEDULE=0 2 * * *

# Run sync on startup (true/false)
CRON_RUN_ON_STARTUP=true

# --------------------------------------------
# Google Drive Configuration
# --------------------------------------------
# Optional: Specific folder ID to sync (leave empty to sync all accessible files)
DRIVE_FOLDER_ID=

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# Optional: Teacher ID and User ID for knowledge_base table
TEACHER_ID=
USER_ID=

# --------------------------------------------
# API Server Configuration
# --------------------------------------------
API_PORT=3000

# --------------------------------------------
# Logging Configuration (Optional)
# --------------------------------------------
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log
