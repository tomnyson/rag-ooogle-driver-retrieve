# Google Drive API Authentication
# Option 1: Using Service Account File (traditional method)
GOOGLE_SERVICE_ACCOUNT_FILE=./service-account.json

# Option 2: Using Environment Variables (recommended for production/Docker)
# Uncomment and fill these if you want to use env vars instead of JSON file
# GOOGLE_SERVICE_ACCOUNT_TYPE=service_account
# GOOGLE_SERVICE_ACCOUNT_PROJECT_ID=
# GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY_ID=
# GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=
# GOOGLE_SERVICE_ACCOUNT_CLIENT_EMAIL=
# GOOGLE_SERVICE_ACCOUNT_CLIENT_ID=
# GOOGLE_SERVICE_ACCOUNT_AUTH_URI=https://accounts.google.com/o/oauth2/auth
# GOOGLE_SERVICE_ACCOUNT_TOKEN_URI=https://oauth2.googleapis.com/token
# GOOGLE_SERVICE_ACCOUNT_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
# GOOGLE_SERVICE_ACCOUNT_CLIENT_CERT_URL=

# Gemini API
GEMINI_API_KEY=

# Supabase
SUPABASE_URL=
SUPABASE_KEY=

# Cron Schedule (default: every day at 2 AM)
CRON_SCHEDULE=0 2 * * *

# Optional: Specific Google Drive folder ID to sync (leave empty to sync all files)
DRIVE_FOLDER_ID=1PXUB64w7-RjyFji71X-ctbOePOpdPfN-

# Optional: Teacher ID and User ID for knowledge_base table
TEACHER_ID=
USER_ID=

# API Server Configuration
API_PORT=3000
